<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="bibliotecaUnit"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		
		<class>br.com.opengti.library.domain.Book</class>
		<class>br.com.opengti.library.domain.Category</class>
		<class>br.com.opengti.library.domain.Comment</class>
		<class>br.com.opengti.library.domain.Feedback</class>
		<class>br.com.opengti.library.domain.Librarian</class>
		<class>br.com.opengti.library.domain.Paper</class>
		<class>br.com.opengti.library.domain.Person</class>
		
		<class>br.com.opengti.library.domain.Publisher</class>
		<class>br.com.opengti.library.domain.Rented</class>
		<class>br.com.opengti.library.domain.Role</class>
		<class>br.com.opengti.library.domain.Section</class>
		<class>br.com.opengti.library.domain.Tag</class>
	

		<properties>

			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/teste"></property>
			<property name="hibernate.connection.username" value="root"></property>
			<property name="hibernate.connection.password" value="dds3@1"></property>
			<property name="hibernate.connection.pool_size" value="10"></property>
			<property name="show_sql" value="true"></property>


			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
		</properties>
	</persistence-unit>
</persistence>